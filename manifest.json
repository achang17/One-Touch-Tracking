{
    "manifest_version": 2,
    "name": "My extension",
    "version": "1.0",


    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "PackageTracker",
        "default_popup": "popup.html" // optional
    },

    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["content.js"]
        }
      ]
}